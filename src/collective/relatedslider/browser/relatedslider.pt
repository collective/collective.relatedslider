<div id="related-slider-wrapper"
     tal:define="content view/related_content|nothing; normalizer nocall:context/plone_utils/normalizeString|nothing"
     tal:condition="content">
  <aside i18n:domain="collective.relatedslider"
         id="related-slider" data-ride="carousel">
    <h4 class="SliderTitle" tal:condition="view/slider_title|nothing" tal:content="view/slider_title">Slider Title:</h4>
    <div class="control-wrapper">
      <a class="control prev">
        <span class="glyph" aria-hidden="true">&#x3008;</span>
        <span class="sr-only">Previous</span>
      </a>

      <div class="slider">
        <ul tal:attributes="class python:'slider-items-{}'.format(len(content))">
          <tal:items repeat="item content">
          <li tal:define="url item/getURL|item/absolute_url;
                          image nocall:item/image|nothing"
              tal:attributes="class python:'slider-item' + (' type-' + normalizer(item.portal_type)) + (repeat['item'].start and ' active' or '') + (not image and ' no-image' or '')">
            <a href=""
               class="item-image"
               tal:condition="nocall:image"
               tal:attributes="href url">
              <img src="" tal:attributes="src string:${url}/@@images/image/thumb;
                                          alt item/image_caption|item/Description" />
            </a>
            <div class="missing-image" tal:condition="not:nocall:item/image|nothing" />
            <a href="" class="item-caption"
               tal:attributes="href url">
              <span tal:content="item/Title">
                Title
              </span>
            </a>
          </li>
          </tal:items>
        </ul>
      </div>

      <a class="control next">
        <span class="glyph" aria-hidden="true">&#x3009;</span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </aside>
</div>